

@using u21663841_HW03.Models
@model List<FileModel>

@{
    ViewBag.Title = "Video";
}

<h2>Video files</h2>
<h4>...."Media/Videos/" Folder</h4>

<div style="height:400px; overflow:auto;">
    <div class="well-sm">
        
            @foreach (FileModel file in Model)
            {

                @*
            Default >> @Html.DisplayFor(modelItem => file.FileName)
                *@
            string videopath = ("~/Media/Videos/") + file.FileName;
                @*Fancy box*@
                <div class="col-md-3 col-lg-3 gallery">

                    <a data-fancybox="video-gallery" href="@Url.Content(videopath)">
                        <video width="200" height="150" alt="vid">
                        <source src="@Url.Content(videopath)" type="video/mp4"></video>
                    </a>

                    @file.FileName
                    <br />
                    @*Download button*@
                    <button class="btn btn-success">

                        @Html.ActionLink("Download", "DownloadFile",
                      new { fileName = file.FileName })

                    </button>

                    @*Delete button*@
                    <button class="btn btn-danger">
                        @Html.ActionLink("DELETE", "DeleteFile",
                    new { fileName = file.FileName },
                    new { onclick = "return confirm('Are you sure you wish to delete this?');" })
                    </button>
                </div>
             }
            
      </div>
</div>

@*jQuery for the Fancy box *@
<script type="text/javascript">
    $(document).ready(function ($) {
        $(".gallery a").fancybox({
            'transitionIn': 'elastic',
            'transitionOut': 'elastic',
            'speedIn': 600,
            'speedOut': 200,
            'overlayShow': false
        });
    });
</script>





