@using u21663841_HW03.Models
@model List<FileModel>

@*
    @model IEnumerable<u21663841_HW03.Models.FileModel>
*@



@{
    ViewBag.Title = "Documents of any File type";
}

<h3>...."Media/Documents/"Folder</h3>
<head>
    <style type="text/css">
        .auto-style {
            color: #FFFFFF;
        }

        .t {
            text-align: center;
            vertical-align: middle;
        }
    </style>
</head>


<div style="height:400px; overflow:auto;">
    <div class="well-sm">
        <table class="table table-condensed table-hover">
            <thead style="position: sticky;top: 0">
                <tr bgcolor="#222222" class="auto-style">
                    <th class="col-lg-8">File Name</th>
                    <th class="t, col-lg-2">DOWNLOAD OPTION</th>
                    <th class="t, col-lg-2">DELETE OPTION</th>
                </tr>
            </thead>
            @foreach (FileModel file in Model)
            {
                <tr>
                    @*
                        Default >> @Html.DisplayFor(modelItem => file.FileName)
                    *@

                    <td>@file.FileName</td>
                    <td>
                        <button class="btn btn-success">

                            @Html.ActionLink("Download", "DownloadFile",
                             new { fileName = file.FileName })

                        </button>
                    </td>
                    <td>
                        <button class="btn btn-danger">
                            @Html.ActionLink("DELETE", "DeleteFile",
                           new { fileName = file.FileName },
                           new { onclick = "return confirm('Are you sure you wish to delete this?');" })
                        </button>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>




<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>


